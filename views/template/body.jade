extends master

block content
  div.container
    div.row
      div.col-sm-4.col-sm-offset-4
        div#twatt-logo-wrapper
          img#twatt-logo(src='images/twatt_logo_white.png')
          span#twatt-highlight twitter highlight
        div#panel-profile.panel.panel-info
          div.panel-heading
            img#profile-logo
            span#profile-name
          div.panel-body
            form#form-tweet(action="/", method="POST")
              div(class='form-group')
                input(id='txt-tweet',class='form-control',type='text',autocomplete='off',name='tweet')
              button(type='submit', class='btn btn-info btn-block') Tweet
        div#panel-result
          if tweet
            p.result-text
              span.highlight Tweet timeline
            div#result-tweet
